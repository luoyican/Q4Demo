<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:src="@drawable/pic_back_btn"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="蓝牙识别"
            android:textSize="20dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/viewSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSerach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blueBg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="查找设备"
                    android:textColor="#2303f1"
                    android:textSize="22dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/txtMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="@color/blueBg"
                android:textSize="18dp"
                android:visibility="gone"/>

            <ListView
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@color/red"
                android:dividerHeight="1px"
                ></ListView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_margin="10dp"
                android:textColor="@color/red"
                android:textSize="14dp"
                />

            <TextView
                android:id="@+id/txtConnet"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/red"
                android:textSize="14dp"
                android:visibility="visible"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtId1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/gray95"
                    android:gravity="center"
                    android:text="测试1-成功"
                    android:textColor="#333333"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/txtId2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/gray95"
                    android:gravity="center"
                    android:text="测试2-成功"
                    android:textColor="#333333"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/txtId3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/gray95"
                    android:gravity="center"
                    android:text="测试1-失败"
                    android:textColor="#333333"
                    android:textSize="14dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text=""
                android:textColor="@color/blueBg"
                android:textSize="18dp"
                android:visibility="visible"/>

        </LinearLayout>
    </FrameLayout>

</LinearLayout>