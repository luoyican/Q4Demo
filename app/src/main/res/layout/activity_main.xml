<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c7c7c7"
        android:gravity="center"
        android:text="OKRQ4 Demo清单"
        android:textColor="#1b1b1b"
        android:textSize="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtVoicePrintWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#64e67a"
                android:padding="10dp"
                android:text="声纹识别身份Demo"
                android:textColor="#ff1e1e"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtAcousticWaveWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#64e67a"
                android:padding="10dp"
                android:text="声波传输Demo"
                android:textColor="#ff1e1e"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtBluetoothWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#64e67a"
                android:padding="10dp"
                android:text="蓝牙识别身份Demo"
                android:textColor="#ff1e1e"
                android:textSize="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
